extend ../layout

block content
	.container
		.row
			p 我的订单
			table.table.table-hover.table-bordered
				thead
					tr
						th 订单号
						th 时间
						th 商品
						th 需付款金额
						th 状态
						th 操作
				tbody
					if order && order.length > 0
						each item in order
							tr(class=`item-id-${item._id}`)
								td #{item.ordernum}
								td #{moment(item.meta.updateAt).format('MM/DD/YYY')}
								td #{item.goods}
								td #{item.totalValue}
								td #{item.status}
								td
									button.btn.btn-danger(type="button", data-id=`${item._id}`) 取消